<main>

    {{#if error}}
    <div class="notifications">
        <p class="notification-message">{{error.message}}</p>
    </div>
    {{/if}}
    <table class="expenses-info">
        <thead>
            <tr>
                <th colspan="2">Expenses</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Total Amount:</td>
                <td>{{sum}} BGN</td>
            </tr>
            <tr>
                <td>Total Merches</td>
                <td>{{count}}</td>
            </tr>
        </tbody>
    </table>

    <div class="current-amount">
        <p>Available amount: <span>{{available}} BGN</span></p>
    </div>
</main>